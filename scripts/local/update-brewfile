#!/usr/bin/env bash

DOTFILES_DIR=$HOME/dotfiles
OUTPUT_FILE=$DOTFILES_DIR/.config/brew/Brewfile

# Ensure dotfiles and output file directories exist
if [ ! -d $DOTFILES_DIR ]; then
  echo "Error: Dotfiles directory not found at $DOTFILES_DIR."
  exit 1
fi

if [ ! -d $DOTFILES_DIR/.config/brew ]; then
  mkdir -p $DOTFILES_DIR/.config/brew
fi

echo "Updating $OUTPUT_FILE..."

brew bundle dump --force --file=$OUTPUT_FILE
